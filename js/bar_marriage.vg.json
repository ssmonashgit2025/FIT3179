{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Marriage count by age group in 2024", "color":"#55594f"},
  "background": "transparent",
  "width": 430,
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/data/Marriage%20and%20divorce%20rate%20by%20age%20group.csv",
    "format": { "type": "csv" }
  },
  "encoding": {
    "x": {
      "field": "Age group",
      "type": "ordinal",
      "title": "Age Group",
      "axis": { "labelAngle": 45 }
    },
    "y": {
      "field": "Marriages",
      "type": "quantitative",
      "title": "Marriage count",
      "scale": { "domain": [0, 75000] }
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {"value": "#C5A8E0"
        },
        "tooltip": [
          { "field": "Age group", "type": "nominal", "title": "Age group" },
          {
            "field": "Marriages",
            "type": "quantitative",
            "title": "Marriage count",
            "format": ","
          }
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum['Age group'] === '25 to 29'"}
      ],
      "mark": {"type": "text", "align": "center", "baseline": "bottom", "dy": 40, "dx":160, "color": "#55594f"},
      "encoding": {
        "x": {"field": "Age group", "type": "ordinal"},
        "y": {"field": "Marriages", "type": "quantitative"},
        "text": {"value": "25 to 29 years old is the most common"}
      }
    },
    {

      "transform": [
        {"filter": "datum['Age group'] === '25 to 29'"}
      ],
      "mark": {"type": "text", "align": "center", "baseline": "bottom", "dy": 60, "dx":147, "color": "#55594f"},
      "encoding": {
        "x": {"field": "Age group", "type": "ordinal"},
        "y": {"field": "Marriages", "type": "quantitative"},
        "text": {"value": "age for Australians to get married"}
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false },"title": { "font": "sans-serif", "fontSize": 16 } 
  }
}
