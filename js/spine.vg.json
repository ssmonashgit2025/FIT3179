{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text":"Average marriage age for various OECD countries", "color":"#55594f"},
  "background": "transparent",
  "width": 430,
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "data/Mean age spine.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    {
      "calculate": "datum.Gender == 'Male' ? -datum['Mean marriage age'] : datum['Mean marriage age']",
      "as": "signed_age"
    }
  ],

  "encoding": {
    "y": {
      "field": "Country",
      "axis": null,
      "sort": "descending"
    },
    "x": {
      "aggregate": "sum",
      "field": "signed_age",
      "title": "Mean age",
      "axis": { "format": "s",
      "labelExpr": "abs(datum.value)" }
    },
    "color": {
      "field": "Gender",
      "scale": {"domain":["Male", "Female"], "range": ["#afc57f", "#cba62c"] },
      "legend": { "orient": "top", "title": null }
    }
  },
  "layer": [
    {
      "mark": { "type": "bar", "size": 3, "tooltip": true }
    },
    {
      "mark": { "type": "point", "size": 400, "tooltip": true, "filled":true }
    },
    {
      "mark": { "type": "text", "align": "center", "baseline": "bottom", "dx": 0, "dy": -2 },
      "encoding": {
        "y": { "field": "Country" },
        "x": { "aggregate": "sum", "field": "signed_age" },
        "text": { "field": "Country" },
        "color": { "value": "#55594f" }
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false },"title": { "font": "sans-serif", "fontSize": 16 } 
  }
}
