{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 580,
    "title": "Map of Australian disaster events from 1753 to 2023",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "js/AUSDAT.topojson",
          "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "js/AUSDAT.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "data/datclean.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "lon", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "size": {
            "field": "Deaths",
            "type": "quantitative",
            "title": "Number of deaths",
            "scale": {"domain": [10,10000], "range": [50,1000]},
            "legend": {"orient": "right", "offset": -150, "padding": 0}},
          "color": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year",
          "scale": {"scheme": "blues"}},
          "tooltip": [
            {"field": "Head", "type": "nominal", "title": "Event"},
            {"field": "Category", "type": "nominal", "title": "Category"},
            {"field": "Year", "type": "quantitative", "title": "Year"},
            {"field": "Deaths", "type": "quantitative", "title": "Deaths"},
            {"field": "lat", "type": "quantitative", "title": "Latitude"},
            {"field": "lon", "type": "quantitative", "title": "Longitude"}
          ]

        }
      }
    ]
}