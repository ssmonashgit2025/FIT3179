{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Marriage rate by Australian state in 2024",
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 500,
          "height": 470,
          "projection": { "type": "mercator" },
          "layer": [
            {
              "data": {
                "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/js/AUSDAT.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "STE_2021_AUST_GDA2020"
                }
              },

              "transform": [
                {
                  "lookup": "properties.STE_NAME21",
                  "from": {
                    "data": {
                      "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/data/Marriage%20and%20divorce%20rate%20by%20state.csv"
                    },
                    "key": "State",
                    "fields": ["Marriage_rate", "Marriages_tot"]
                  }
                },
                {
                  "calculate": "toNumber(datum.Marriage_rate)",
                  "as": "Marriages per 1000 people"
                }
              ],
              "mark": {
                "type": "geoshape"
              },
              "encoding": {
                "color": {
                  "field": "Marriages per 1000 people",
                  "type": "quantitative",
                  "scale": {
                    "type": "linear",
                    "domain": [2.8, 4.2, 4.5]
                  }
                },
                "tooltip": [
                  {"field": "properties.STE_NAME21", "type": "nominal", "title": "State" },
                  {"field": "Marriage_rate", "type": "quantitative", "title": "Marriages per 1000 people", "format":".2f" },
                  {"field": "Marriages_tot", "type": "quantitative", "title": "Total marriages", "format": ","}
                ]
              }
            },

            {
              "data": {
                "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/js/AUSDAT.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_graticules_10"
                }
              },
              "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
              }
            }
          ]
        }
      ]
    }
  ],
  "config": { "title": { "font": "sans-serif", "fontSize": 16 } }
}
