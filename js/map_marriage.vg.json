{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Marriage rate by Australian state in 2024",
    "color": "#55594f"
  },
  "background": "transparent",
  "width": 430,
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/js/AUSDAT.topojson",
        "format": {
          "type": "topojson",
          "feature": "STE_2021_AUST_GDA2020"
        }
      },

      "transform": [
        {
          "lookup": "properties.STE_NAME21",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/data/Marriage%20and%20divorce%20rate%20by%20state.csv"
            },
            "key": "State",
            "fields": ["Marriage_rate", "Marriages_tot"]
          }
        },
        {
          "calculate": "toNumber(datum.Marriage_rate)",
          "as": "Marriages per 1000 people"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Marriages per 1000 people",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [2.8, 4.2, 4.5],
            "scheme": "purples"
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "titleOrient": "bottom"
          }
        },
        "tooltip": [
          {
            "field": "properties.STE_NAME21",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Marriage_rate",
            "type": "quantitative",
            "title": "Marriages per 1000 people",
            "format": ".2f"
          },
          {
            "field": "Marriages_tot",
            "type": "quantitative",
            "title": "Total marriages",
            "format": ","
          }
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/js/AUSDAT.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_graticules_10"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "values": [
          { "label": "NSW has the highest marriage rate at 4.67 marriages" }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 30,
        "dy": 320,
        "color": "#55594f"
      },
      "encoding": {
        "x": { "value": 0 },
        "y": { "value": 0 },
        "text": { "field": "label" }
      }
    },
    {
      "data": {
        "values": [{ "label": "per thousand people, while NT is only at 2.83" }]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 30,
        "dy": 340,
        "color": "#55594f"
      },
      "encoding": {
        "x": { "value": 0 },
        "y": { "value": 0 },
        "text": { "field": "label" }
      }
    }
  ],

  "config": {
    "view": { "stroke": null },
    "title": { "font": "sans-serif", "fontSize": 16 }
  }
}
