{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Same-sex marriage rates",
  "background": "transparent",
  "width": 400,
  "height": 400,
  "autosize":{"type":"fit", "contains":"padding"},
  "data": {
    "url": "data/Mean age lollipop.csv",
    "format": { "type": "csv" }
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "axis": { "labelAngle": 90 }
    },
    "xOffset": { "field": "Gender" },
    "y": {
      "field": "Mean marriage age",
      "type": "quantitative",
      "title": "Age"
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": { "range": ["#2596be", "#f28e2b"] }
    },
    "tooltip": [
      { "field": "Country" },
      { "field": "Gender" },
      { "field": "Mean marriage age" }
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 3,
        "tooltip": true
      }
    },
    {
      "mark": {
        "type":"point",
        "size":500,
        "filled":true,
        "opacity":1
      }
    }
  ]
}
