{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text":"Same-sex marriage rate for various OECD countries", "color":"#55594f"},
  "background": "transparent",
  "width": 430,
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "https://raw.githubusercontent.com/ssmonashgit2025/FIT3179/refs/heads/main/data/Same-sex%20lollipop.csv",
    "format": { "type": "csv" }
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "sort":["UK","Australia","Germany","Sweden","Iceland"]
    },
    "y": { 
      "field": "Share",
      "type": "quantitative",
      "title": "Share of same-sex marriages (%)"
    }
  },
  "layer": [
    {
      "mark": { "type": "bar", "size": 3, "tooltip": true },
      "encoding":{
        "color": {
          "condition": { "test": "datum.Country == 'Australia'", "value": "red" },
          "value": "#ccc"
        }
      }
    },
    {
      "mark": { "type": "point", 
      "size": 400, 
      "tooltip": true, 
      "filled":true, 
    "opacity":1},
      "encoding":{
        "color": {
          "condition": { "test": "datum.Country == 'Australia'", "value": "red" },
          "value": "#ccc"
        }
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false },"title": { "font": "sans-serif", "fontSize": 16 } 
  }
}
