{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Same-sex marriage rate for various OECD countries",
  "background": "transparent",
  "width": 430,
  "height": 450,
  "autosize": { "type": "fit", "contains": "padding" },
  "data": {
    "url": "data/Same-sex lollipop.csv",
    "format": { "type": "csv" }
  },
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal"
    },
    "y": { 
      "field": "Share",
      "type": "quantitative",
      "title": "Share of same-sex marriages"
    }
  },
  "layer": [
    {
      "mark": { "type": "bar", "size": 3, "tooltip": true },
      "encoding":{
        "color": {
          "condition": { "test": "datum.Country == 'Australia'", "value": "red" },
          "value": "#ccc"
        }
      }
    },
    {
      "mark": { "type": "point", 
      "size": 400, 
      "tooltip": true, 
      "filled":true, 
    "opacity":1},
      "encoding":{
        "color": {
          "condition": { "test": "datum.Country == 'Australia'", "value": "red" },
          "value": "#ccc"
        }
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false }
  }
}
